@model List<Book>
@{
    ViewData["Title"] = "Books";
}

<div class="text-center">
    <h1 class="display-4">Books</h1>
    @foreach (Book book in Model)
    {
        <h1>@book.Title</h1>
        <p>by:</p>
        <p>
        @foreach (Author author in book.Authors)
            @author.Name
        </p>
        <p>@book.Blurb</p>
        <img src = "@book.ImageUrl">
        <p>Total number of copies</p>
        <p>@book.Copies.Count</p>
        <p> Available number of copies</p>
        <p>@(book.Copies.Count - book.CheckedOutCopies.Count)</p>

    }
</div>
